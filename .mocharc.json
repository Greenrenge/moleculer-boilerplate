{
  "extension": [
    ".test.ts",
    ".spec.ts"
  ],
  "file": [
    "src/test/setup.js"
  ],
  "package": "./package.json",
  "node-option": [
    "experimental-specifier-resolution=node",
    "loader=ts-node/esm",
    "loader=module-alias/register"
  ],
  "spec": [
    "src/**/test/**/*.test.ts",
    "src/**/test/**/*.spec.ts"
  ],
  "timeout": "60000",
  "recursive": true
}