{
  "name": "backend-boilerplate",
  "version": "1.0.0",
  "description": "Backend Boilerplate",
  "main": "src/index.js",
  "exports": "./src/index.js",
  "type": "commonjs",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc --project tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "dev": "ts-node -r module-alias/register ./node_modules/moleculer/bin/moleculer-runner.js --hot src/services/*.service.ts src/services/**/*.service.ts src/services/*.service.js src/services/**/*.service.js",
    "dev:repl": "ts-node -r module-alias/register ./node_modules/moleculer/bin/moleculer-runner.js --repl --hot src/services/*.service.ts src/services/**/*.service.ts src/services/*.service.js src/services/**/*.service.js",
    "start": "moleculer-runner --config dist/moleculer.config.js",
    "test:types": "concurrently npm:prettier npm:lint npm:typecheck",
    "typecheck": "tsc --noEmit && echo \"tsc: no typecheck errors\"",
    "generate-jwks": "node ./scripts/generate-jwks.js",
    "test": "cross-env NODE_ENV=test ts-mocha",
    "ci-jest": "jest --watch",
    "test-jest": "jest --coverage",
    "lint": "cross-env TIMING=1 eslint . --ext cjs,mjs,js,jsx,ts,tsx",
    "lint:fix": "cross-env TIMING=1 eslint . --ext cjs,mjs,js,jsx,ts,tsx --fix",
    "prettier": "prettier . --ignore-unknown --check",
    "prettier:fix": "prettier . --ignore-unknown --write",
    "dc:up": "docker-compose up --build -d",
    "dc:logs": "docker-compose logs -f",
    "dc:down": "docker-compose down"
  },
  "keywords": [],
  "author": "GreenRenge",
  "license": "ISC",
  "dependencies": {
    "@casl/ability": "^6.5.0",
    "@casl/mongoose": "^7.2.1",
    "@greenrenge/gracefully": "^1.1.0",
    "@meanie/mongoose-upsert-many": "^2.2.0",
    "aws-sdk": "^2.1556.0",
    "axios": "^1.6.7",
    "base62": "^2.0.1",
    "bcrypt": "^5.1.1",
    "caller-path": "^3.0.1",
    "cookie": "^0.6.0",
    "directory-import": "^2.3.1",
    "dot-object": "^2.1.4",
    "extract-files": "^11.0.0",
    "fastest-validator": "^1.17.0",
    "ioredis": "^4.27.10",
    "jaeger-client": "^3.18.1",
    "jose": "^5.2.2",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "luxon": "^3.4.4",
    "moleculer": "^0.14.32",
    "moleculer-apollo-server": "^0.3.8",
    "moleculer-repl": "^0.7.4",
    "moleculer-web": "^0.10.7",
    "mongo-migrate-ts": "^1.4.0",
    "mongodb": "6.2.0",
    "mongoose": "^8.0.2",
    "mongoose-aggregate-paginate-v2": "^1.0.7",
    "mongoose-mpath": "^3.0.2",
    "nats": "^1.4.12",
    "passport": "^0.7.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.3.1",
    "@types/bcrypt": "^5.0.2",
    "@types/chai": "^4.3.11",
    "@types/chai-as-promised": "^7.1.8",
    "@types/factory-girl": "^5.0.12",
    "@types/jest": "^29.2.3",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/lodash": "^4.14.202",
    "@types/mocha": "^10.0.6",
    "@types/node": "^18.11.9",
    "@types/sinon-chai": "^3.2.12",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "chai": "^4.3.10",
    "chai-as-promised": "^7.1.1",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.1.6",
    "eslint-plugin-mocha": "^10.2.0",
    "eslint-plugin-prettier": "^5.0.1",
    "esm-module-alias": "^2.1.0",
    "factory-girl": "5.0.4",
    "jest": "^29.3.1",
    "module-alias": "^2.2.3",
    "mongodb-memory-server": "^9.1.4",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "sinon": "^17.0.1",
    "sinon-chai": "^3.7.0",
    "ts-jest": "^29.0.3",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "typescript": "^4.9.3"
  },
  "overrides": {
    "extract-files": "^11.0.0"
  },
  "resolutions": {
    "extract-files": "^11.0.0"
  },
  "_moduleAliases": {
    "@": "src",
    "@test": "src/test",
    "@configs": "configs",
    "@pkg": "packages",
    "@utils": "src/utils",
    "@auth": "src/services/auth-service",
    "@upload": "src/services/upload-service",
    "@org": "src/services/org-service"
  },
  "packageManager": "pnpm@8.14.1",
  "pnpm": {
    "patchedDependencies": {
      "extract-files@11.0.0": "patches/extract-files@11.0.0.patch"
    }
  }
}